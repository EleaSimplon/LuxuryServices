{% extends 'base.html.twig' %}

{% block body %}

    <section class="page-title page-index-admin fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="white-text">{{ firstName }}</h2>
                    <span class="white-text">Applied for {{ title }}</span>
                    <ol class="breadcrumb">
                        <li><a href="{{ path ('home') }}">Home</a></li>
                        <li class="active">Application</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <table class="table striped centered responsive-table">
            <tbody>
            <tr>
                <th class="center">Infos about the Candidate</th>
                <td></td>
            </tr>
                <tr>
                    <th>Id</th>
                    <td>{{ id }}</td>
                </tr>
                <tr>
                    <th>First Name</th>
                    <td>{{ firstName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ email }}</td>
                </tr>
                <tr>
                    <th class="center">Infos about the Job Offer</th>
                    <td></td>
                </tr>
                <tr>
                    <th>Title of the offer</th>
                    <td>{{ title }}</td>
                </tr>
                <tr>
                    <th>SocietyName</th>
                    <td>{{ infoCustomer }}</td>
                </tr>
                <tr>
                    <th>Name of the contact</th>
                    <td>{{ contactName }}</td>
                </tr>
                <tr>
                    <th>Email of the contact</th>
                    <td>{{ contactMail }}</td>
                </tr>
                {# <tr>
                    <th>CreatedAt</th>
                    <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr> #}

                {# {% if info_admin_client %}
                    <tr>
                        <th>Comment</th>
                        <td>{{ info_admin_client.notes }}</td>
                    </tr>
                {% endif %} #}
            </tbody>
        </table>
    </div>

    <div class="row center">
        <div class="col-xs-12 col-sm-4 col-md-4">
            <a class="btn gradient secondary waves-effect waves-light" href="{{ path('applicationList', {'id': user.id}) }}"><i class="material-icons prefix">arrow_back</i> back to list</a>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4 col-md-offset-4">

            {# {% if info_admin_client == false %}

                <a class="btn gradient secondary waves-effect waves-light" href="{{ path('info_admin_client_new', {'id' : client.id}) }}">Add a comment</a>

                {% else %}

                <a class="btn gradient secondary waves-effect waves-light" href="{{ path('info_admin_client_edit', {'id' : client.infoAdminClient.id}) }}">Edit your comment</a>

            {% endif %} #}

        </div>
        <div class="col-xs-12 col-sm-4 col-md-4 col-md-offset-4">
            {{ include('application/_delete_form.html.twig') }}
        </div>
    </div>
   
   
{% endblock %}