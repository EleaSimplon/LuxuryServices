{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>SocietyName</th>
                <td>{{ client.societyName }}</td>
            </tr>
            <tr>
                <th>NameContact</th>
                <td>{{ client.nameContact }}</td>
            </tr>
            <tr>
                <th>MailContact</th>
                <td>{{ client.mailContact }}</td>
            </tr>
            <tr>
                <th>PhoneNumberContact</th>
                <td>{{ client.phoneNumberContact }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ActivityType</th>
                <td>{{ client.activityType }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">back to list</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
