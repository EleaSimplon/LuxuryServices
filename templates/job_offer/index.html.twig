{% extends 'base.html.twig' %}

{% block title %}JobOffer index{% endblock %}

{% block body %}
    <h1>JobOffer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TitleJob</th>
                <th>IsVisible</th>
                <th>CreatedAt</th>
                <th>ExpiredAt</th>
                <th>Salary</th>
                <th>Location</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_offer in job_offers %}
            <tr>
                <td>{{ job_offer.id }}</td>
                <td>{{ job_offer.titleJob }}</td>
                <td>{{ job_offer.isVisible ? 'Yes' : 'No' }}</td>
                <td>{{ job_offer.createdAt ? job_offer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job_offer.expiredAt ? job_offer.expiredAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job_offer.salary }}</td>
                <td>{{ job_offer.location }}</td>
                <td>{{ job_offer.description }}</td>
                <td>
                    <a href="{{ path('job_offer_show', {'id': job_offer.id}) }}">show</a>
                    <a href="{{ path('job_offer_edit', {'id': job_offer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_offer_new') }}">Create new</a>
{% endblock %}
