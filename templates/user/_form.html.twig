{% block stylesheets %}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <style>
        .dropdown-content{
            max-height: none;
        }
        .datepicker-modal{
            max-height: fit-content;
        }
        .datepicker-date-display{
            background-color: #B6A575;
        }
        .tp-caption.boxshadow, .boxshadow {
            box-shadow: 0 0 0px rgb(0 0 0)!important;
        }
    </style>

{% endblock %}

{{ form_start(form) }}

    <section class="section-padding">
        <div class="container">
            <div class="row">
                <h3 class="text-extrabold center">Your personal informations</h3>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        <i class="material-icons prefix">person_pin</i>
                        {{ form_widget(form.gender) }}
                        {{ form_label(form.gender, 'Gender') }}
                    </div>
                </div>
                <div class="clearfix visible-sm"></div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_label(form.firstName, 'First Name', {'attr': {'for' : 'first_name',}}) }}
                        {{ form_widget(form.firstName, {'attr': {'type' : 'text', 'class' : 'form-control', 'name' : 'first_name', 'id' : 'first_name'}}) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_label(form.lastName, 'Last Name', {'attr': {'for' : 'last_name',}}) }}
                        {{ form_widget(form.lastName, {'attr': {'type' : 'text', 'class' : 'form-control', 'name' : 'last_name', 'id' : 'last_name'}}) }}

                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        <i class="material-icons prefix">location_on</i>
                        {{ form_label(form.searchLocation, 'Search Loaction', {'attr': {'for' : 'current_location',}}) }}
                        {{ form_widget(form.searchLocation, {'attr': {'type' : 'text', 'name' : 'current_location', 'id' : 'current_location'}}) }}

                    </div>
                </div>
                <div class="col-xs-12 col-sm-8">
                    <div class="input-field">
                         {{ form_label(form.adress, 'Adress', {'attr': {'for' : 'address',}}) }}
                        {{ form_widget(form.adress, {'attr': {'type' : 'text', 'name' : 'address', 'id' : 'address'}}) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="card card-panel passport">
                        <div class="file-field input-field"
                            style="margin-top: 32px;">
                            <div class="btn btn-lg primary waves-effect waves-light">
                                {{ form_widget(form.photo) }}
                                {{ form_label(form.photo) }}
                                <span><i class="material-icons">insert_photo</i> Photo</span>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-8">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="input-field">
                                <i class="material-icons prefix">public</i>
                                {{ form_label(form.country, 'Country', {'attr': {'for' : 'country',}}) }}
                                {{ form_widget(form.country, {'attr': {'type' : 'text', 'name' : 'country', 'id' : 'country'}}) }}
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="input-field">
                                {{ form_label(form.nationality, 'nationality', {'attr': {'for' : 'nationality',}}) }}
                                {{ form_widget(form.nationality, {'attr': {'type' : 'text', 'name' : 'nationality', 'id' : 'nationality'}}) }}
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="input-field">
                                <i class="material-icons prefix">date_range</i>
                                {{ form_label(form.birthDate, 'Birth Date', {'attr': {'for' : 'birth_date',}}) }}
                                {{ form_widget(form.birthDate, {'attr': {'type' : 'text', 'class' : 'datepicker', 'name' : 'birth_date', 'id' : 'birth_date'}}) }}
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="input-field">
                                {{ form_label(form.birthLocation, 'Birth Location', {'attr': {'for' : 'birth_place',}}) }}
                                {{ form_widget(form.birthLocation, {'attr': {'type' : 'text', 'name' : 'birth_place', 'id' : 'birth_place'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-40">
                <h3 class="text-extrabold center">Your professional profile</h3>
                <div class="col-xs-12 col-sm-6">
                    <div class="card card-panel passport">
                        <div class="file-field input-field">
                            <div class="btn btn-lg primary waves-effect waves-light">
                                {{ form_widget(form.passport) }}
                                {{ form_label(form.passport) }}
                                <span><i class="material-icons">&#xE24D;</i> Passport</span>
                            </div>
                        </div>
                        <div class="file-field input-field">
                            <div class="btn btn-lg primary waves-effect waves-light">
                                {{ form_widget(form.cv) }}
                                {{ form_label(form.cv) }}
                                <span><i class="material-icons">&#xE24D;</i> CV</span>
                            </div>
                        </div>
                        {# <div class="existing-file">
                        {# ******* SHOW PHOTO IF PROFILE HAVE ONE *******#}
                        {# {% if user.cv %}
                            <img style="width : 5rem" src="{{ asset('assets/cv/' ~ user.cv) }}">
                        {% endif %}
                        </div> #}
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6">
                    <div class="col-xs-12 col-sm-12">
                        <div class="input-field" style="margin-top: 5px;">
                            {{ form_widget(form.category) }}
                            {{ form_label(form.category) }}
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12">
                        <div class="input-field">
                            {{ form_widget(form.experience) }}
                            {{ form_label(form.experience) }}
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12">
                        <div class="input-field">
                            {{ form_widget(form.isAvailable) }}
                            {{ form_label(form.isAvailable, 'Check if you are available to work') }}
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12">
                    <div class="input-field">
                        <i class="material-icons prefix">mode_edit</i>
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, {'attr': {'type' : 'textarea', 'name' : 'description', 'id' : 'textarea2', 'class' : 'materialize-textarea'}}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <h3 class="text-extrabold center">Your Uploaded files</h3>
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div class="file-field input-field"
                        style="margin-top: 32px;">
                        <div class="existing-file">
                        {# ******* SHOW FILES IF PROFILE HAVE ONE *******#}
                        {% if user.photo %}
                            <img style="width : 5rem" src="{{ asset('assets/photo/' ~ user.photo) }}">
                        {% endif %}
                        {% if user.cv %}
                            <img style="width : 5rem" src="{{ asset('assets/cv/' ~ user.cv) }}">
                        {% endif %}
                        {% if user.passport %}
                            <img style="width : 5rem" src="{{ asset('assets/passport/' ~ user.passport) }}">
                        {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <section class="section-padding gray-bg">
        <div class="container">
            <div class="row">
                <h3 class="text-extrabold center">Your K-Yachting account</h3>
                <div class="col-xs-12 col-sm-6">
                    <div class="input-field">
                        {{ form_label(form.email, 'Email', {'attr': {'for' : 'email',}}) }}
                        {{ form_widget(form.email, {'attr': {'type' : 'email', 'name' : 'email', 'id' : 'email'}}) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="input-field">
                        {{ form_label(form.password, 'Change your password here') }}
                        {{ form_widget(form.password, {'attr': {'id' : 'password', 'name' : 'password', 'type' : 'password'}}) }}
                        <i class="fa fa-eye show-password"></i>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 mt-40 mb-80 delete-account">
                    <button type="submit" class="btn btn-block btn-lg gradient secondary waves-effect waves-light">
                        <span><strong>UPDATE</strong> NOW</span>
                    </button>
                    {# <button type="submit" class="btn btn-block btn-lg gradient secondary waves-effect waves-light">{{ button_label|default('Save')}}</button> #}
                </div>
            </div>

        </div>
    </section>

    {# <button class="btn">{{ button_label|default('Save') }}</button> #}

{{ form_end(form) }}

    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4">

            <a href="{{ path ('home')}}" class="btn btn-block btn-lg border primary waves-effect waves-light"><i class="fa fa-long-arrow-left"></i> Back home</a>

        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-4">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

 
    <script>
        $(document).ready(function(){
            $('select').formSelect();
        });
    </script>
    <script>
        $('.datepicker').datepicker({
            format: 'yyyy-mm-dd' });
    </script>

{% endblock %}